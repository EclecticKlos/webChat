<!DOCTYPE html>
<html>
<head>
  <title>PatreonicChat</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'makeConversation', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
    <div class="navbar navbar-default navbar-static-top">
    <div class="navbar-container">
      <%= link_to 'Home', root_path, class: 'navbar-button' %>
      <%= link_to 'Featured', root_path, class: 'navbar-button' %>
    </div>
  </div>

<div id="wrapper">

        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <li class="sidebar-brand">
                        Your Chats:
                </li>
              <% if @conversations.length > 0 %>
                <% @conversations.each do |convo| %>
                  <li><a href="/conversations/<%= convo.id %>/messages"><%= convo.sender.username %></a></li>
                <% end %>
              <% end %>
            </ul>
        </div>
        <!-- /#sidebar-wrapper -->

        <!-- Page Content -->
        <div id="page-content-wrapper">
            <div class="container-fluid messages">
                <div class="row">
                    <div class="col-lg-12">
                     <%= yield %>
                      <a href="#menu-toggle" class="btn btn-default" id="menu-toggle">Toggle Menu</a>
                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-content-wrapper -->

    </div>
    <!-- /#wrapper -->

    <!-- jQuery -->
    <script src="js/jquery.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="js/bootstrap.min.js"></script>

    <!-- Menu Toggle Script -->
    <script>
    $("#menu-toggle").click(function(e) {
        e.preventDefault();
        $("#wrapper").toggleClass("toggled");
    });
    </script>
</body>
</html>
